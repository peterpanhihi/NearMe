<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.peterpan.nearme.BookmarksActivity"
    tools:showIn="@layout/app_bar_bookmarks">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp">

        <Spinner
            android:id="@+id/bookmark_types_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dropdown_normal"
            android:overlapAnchor="false"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/listview_bookmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>